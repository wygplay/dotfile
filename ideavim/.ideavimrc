"" Source your .vimrc
"source ~/.vimrc
" leader
let mapleader = " "
" vim原生功能映射
"语法高亮
syntax on
"显示光标所在位置的行号和列号
set ruler
set wrap                      "自动折行
set shiftwidth=4
set tabstop=4
set softtabstop=4
set expandtab                  "将tab替换为相应数量空格
set smartindent
set backspace=2
set co=5
"设置取消备份 禁止临时文件生成
set nobackup
set noswapfile
" 为IdeaVim插件增加自动切换为英文输入法的功能,
" idea 需要安装 IdeaVimExtension plugin
set keep-english-in-normal-and-restore-in-insert
"设置匹配模式 类似当输入一个左括号时会匹配相应的那个右括号
set showmatch
" 显示行号
set nu
" 显示相对行号
set rnu
" 高亮搜索
set hlsearch
" 自动定位到输入中的字符串，不需要回车搜索
set incsearch
" 显示当前的模式
set showmode
" 共享系统粘贴板
set clipboard=unnamed
set clipboard+=ideaput
" 搜索时智能匹配大小写
set ignorecase smartcase
"set laststatus=2   "命令行为两行
"set fenc=utf-8     "文件编码
set mouse=a        "启用鼠标
"set ignorecase     "忽略大小写
set cursorline     "突出显示当前行


" plugins ----------------------------------------------------------------
" 启用vim surround功能
set surround
set multiple-cursors
set easymotion
set NERDTree

" Plugins configuration -------------------------------------------------
" vim easymotion configuration
let g:EasyMotion_do_mapping = 0 " Disable default mappings
" Turn on case-insensitive feature
let g:EasyMotion_smartcase = 1


" mappings ----------------------------------------------------------------
" Don't use Ex mode, use Q for formatting.
nmap Q gq
inoremap ii <Esc>
map <a-j> gT
map <a-k> gt
nmap g0 1gt
" idea easymotion 不支持overwin命令
map f <Plug>(easymotion-sl)
map s <Plug>(easymotion-sn)
map \w <Plug>(easymotion-bd-wl)
" JK motions: Line motions
nmap <Leader><leader>j <Plug>(easymotion-j)
nmap <Leader><leader>k <Plug>(easymotion-k)
map <Leader>x <Esc>:tabclose<CR>


" Idea actions mappings ---------------------------------------------------
"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
map gi <Action>(GotoImplementation)
map / <Action>(Find)
map <leader>d <Action>(Debug)
map <leader>r <Action>(ReformatCode)
" Find more examples here: https://jb.gg/share-ideavimrc
map <leader>u <Action>(FindUsages)
map <leader>m <Action>(ExtractMethod)
map <leader>c <Action>(IntroduceConstant)
" 创建
map <leader>nc <Action>(NewClass)
" ideavimrc重新加载
map <leader>vl <Action>(IdeaVim.ReloadVimRc.reload)
" 跳转命令
" jump to file postion in project view
map <Leader>jl <Action>(SelectInProjectView)
" window 相关
map <leader>wx <Action>(HideActiveWindow)
"open window"
map <leader>ws <Action>(FileStructurePopup)
map <leader>wf <Action>(FindInFile)
" reading code
map <leader>hi <Action>(Rainbow.ScopeHighlightingAction)
map <leader>ho <Action>(Rainbow.ScopeOutsideHighlightingRestrainAction)
" project
map <leader>po <Esc>:NERDTree<CR>
map <leader>px <Esc>:NERDTreeClose<CR>